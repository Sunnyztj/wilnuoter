  = javascript_include_tag 'contact_us/contact_us'


#contact-info
  .container.text-center
    .row
      .col-sm-4.col-xs-12
        .phone-icon.contact-icon
          %i.fa.fa-phone
        .phone.contact-content
          0591-83328323
      .col-sm-4.col-xs-12
        .address-icon.contact-icon
          %i.fa.fa-map-marker
        .address.contact-content
          福建福州仓山金林路31号五岳大厦二层
      .col-sm-4.col-xs-12
        .email-icon.contact-icon
          %i.fa.fa-envelope
        .email.contact-content
          wilnuoter.wine@gmail.com
    .row
      %hr

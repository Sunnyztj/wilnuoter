- blog = @resp[:blog]

#blog-details.text-center
  .container
    .row.blog-content
      .blog-created-time.hidden-xs
        .blog-created-month
          = blog.created_at.strftime('%^b')
        .blog-created-day
          = blog.created_at.strftime('%d')
      .blog-created-time-xs.visible-xs
        %i.fa.fa-calendar
        %span
          = blog.created_at.strftime('%^b %d')
      .blog-name
        = blog.name
      .blog-body.col-md-10.col-md-offset-1
        = blog.body.html_safe
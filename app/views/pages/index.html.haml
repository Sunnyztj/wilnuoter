%section#cta.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    - for i in 0 .. @resp[:home_sliders].length - 1
      %li{:class => i == 0 ? 'active' : '', 'data-slide-to' => i, 'data-target' => '#cta'}

  / Wrapper for slides
  .carousel-inner{:role => 'listbox'}
    - index = 0
    - @resp[:home_sliders].each do |slider|
      - index += 1

      .item{:class => index == 1 ? 'active' : ''}
        .img{:style => 'background-image: url(' + slider.image.url(:large) + ');'}
        .carousel-caption
          .container
            .cta-content
              .cta-header.logo.logo-white
                = slider.name
              .row
                .cta-main-content.logo.logo-white.col-md-5.pull-right
                  = slider.body
              %a.btn.btn-default.learn-more-link
                = slider.button

  / Controls
  %a.left.carousel-control{'data-slide' => 'prev', :href => '#cta', :role => 'button'}
    %span.glyphicon.glyphicon-chevron-left{'aria-hidden' => 'true'}
    %span.sr-only Previous
  %a.right.carousel-control{'data-slide' => 'next', :href => '#cta', :role => 'button'}
    %span.glyphicon.glyphicon-chevron-right{'aria-hidden' => 'true'}
    %span.sr-only Next


